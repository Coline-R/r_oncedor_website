{% extends 'base.html.twig' %}

{% block title %}Mes adresses - R. Oncedor{% endblock %}

{% block main %}
<main class="main" role="main">

    <!-- breadcrumb's Thread -->
    <div class="breadcrumb_thread">
        <a href="{{ path('home') }}">Accueil</a>
        <p>></p>
        <a href="{{ path('user_profile') }}">Espace client</a>
        <p>></p>
        <a href="#" class="active">Mes adresses</a>
    </div>

    <h1>Mes adresses</h1>

    {% for message in app.flashes('info') %}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}

    <div class="user_block">
        {% include 'user/user_includes/_user_menu.html.twig' %}
        <div class="user_content">
            <div>
                <a href="{{ path('user_address_add') }}" class="btn">Ajouter une addresse</a>
            </div>
            {% for address in addresses %}
            <div class="content_block">
                <div>
                    <p class="bold">{{ address.name }}</p>
                    <p>{{ address.lineOne }}</p>
                    <p>{{ address.lineTwo }}</p>
                    <p>{{ address.postalCode }} {{ address.city }}</p>
                    <p>{{ address.country }}</p>
                </div>
                <div>
                    <a href="{{ path('user_address_edit', {id: address.id}) }}" class="btn">Modifier</a>
                    <a href="{{ path('user_address_delete', {id: address.id}) }}"
                        onclick="return confirm('Etes vous sÃ»re de vouloir supprimer cette adresse : {{address.name}} ? ')" class="btn">Supprimer</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

</main>
{% endblock %}