        <a href="{{ path('home') }}">Accueil</a>
        <p>></p>
        <a href="{{ path('user_profile') }}">Espace client</a>
        <p>></p>
        <a href="#" class="active">Mes adresses</a>
    </div>

    <h2>Mes adresses</h2>

    <div class="admin_block">
        {% include 'user/user_includes/_user_menu.html.twig' %}
        <div>
            {% for address in addresses %}
            <div>
                {{ address.name }}
                {{ address.lineOne }}
                {{ address.lineTwo }}
                {{ address.postalCode }}
                {{ address.city }}
                {{ address.country }}
                <a href="{{ path('user_address_edit', {id: address.id}) }}">Modifier</a>
                <a href="{{ path('user_address_delete', {id: address.id}) }}"
                    onclick="return confirm('Etes vous sÃ»re de vouloir supprimer cette adresse : {{address.name}} ? ')">Supprimer</a>
            </div>
        </div>
        {% endfor %}
    </div>

</main>
{% endblock %}