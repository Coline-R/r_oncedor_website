{% extends 'base.html.twig' %}

{% block title %}Mes adresses - R. Oncedor{% endblock %}

{% block main %}
<main class="main" role="main">

    <!-- breadcrumb's Thread -->
    <div class="breadcrumb_thread">
        <a href="{{ path('home') }}">Accueil</a>
        <p>></p>
        <a href="{{ path('user_profile') }}">Espace client</a>
        <p>></p>
        <a href="#" class="active">Mes adresses</a>
    </div>

    <h2>Mes adresses</h2>

    <div>
        {% for address in addresses %}
        <div>
            {{ address.name }}
            {{ address.lineOne }}
            {{ address.lineTwo }}
            {{ address.postalCode }}
            {{ address.city }}
            {{ address.country }}
            <a href="{{ path('user_address_edit', {id: address.id}) }}">Modifier</a>
            <a href="{{ path('user_address_delete', {id: address.id}) }}">Supprimer</a>
        </div>
        {% endfor %}
    </div>

</main>
{% endblock %}