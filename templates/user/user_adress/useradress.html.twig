{% extends 'base.html.twig' %}

{% block title %}Mes adresses - R. Oncedor{% endblock %}

{% block main %}
<main class="main" role="main">

    <!-- breadcrumb's Thread -->
    <div class="breadcrumb_thread">
        <a href="{{ path('home') }}">Accueil</a>
        <p>></p>
        <a href="{{ path('user_profile') }}">Espace client</a>
        <p>></p>
        <a href="#" class="active">Mes adresses</a>
    </div>

    <h2>Mes adresses</h2>

    <div>
        {% for adress in adresses %}
        <div>
            {{ adress.name }}
            {{ adress.lineOne }}
            {{ adress.lineTwo }}
            {{ adress.postalCode }}
            {{ adress.city }}
            {{ adress.country }}
            <a href="{{ path('user_adress_edit', {id: adress.id}) }}">Modifier</a>
            <a href="{{ path('user_adress_delete', {id: adress.id}) }}">Supprimer</a>
        </div>
        {% endfor %}
    </div>

</main>
{% endblock %}