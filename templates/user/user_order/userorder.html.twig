{% extends 'base.html.twig' %}

{% block title %}Espace client - Mes commandes - R. Oncedor{% endblock %}

{% block main %}
<main class="main" role="main">

    <!-- breadcrumb's Thread -->
    <div class="breadcrumb_thread">
        <a href="{{ path('home') }}">Accueil</a>
        <p>></p>
        <a href="{{ path('user_profile') }}">Espace client</a>
        <p>></p>
        <a href="#" class="active">Mes commandes</a>
    </div>

    <h2>Mes commandes</h2>

    <div class="admin_block">
        {% include 'user/user_includes/_user_menu.html.twig' %}
        {% for order in orders %}
        <div>
            <p>Numéro de commande : {{ order.id }}</p>
            <p>Date de commande : {{ order.orderDate|date("m/d/Y") }}</p>
            <p>Statut de la commande {{ order.isShipped }}</p>
            <a href="#">Voir les détails</a>
        </div>
        {% endfor %}

    </div>
</main>
{% endblock %}