                </div>
                <div>
                    <a href="{{ path('user_profile_edit') }}" class="btn">Modifier mes informations</a>
                    <a href="{{ path('app_forgot_password_request') }}" class="btn">Changer mon mot de passe</a>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}