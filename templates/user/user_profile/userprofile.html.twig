{% extends 'base.html.twig' %}

{% block title %}Mon profil - R. Oncedor{% endblock %}

{% block main %}
<main class="main" role="main">

    <!-- breadcrumb's Thread -->
    <div class="breadcrumb_thread">
        <a href="{{ path('home') }}">Accueil</a>
        <p>></p>
        <a href="{{ path('user_profile') }}">Espace client</a>
        <p>></p>
        <a href="#" class="active">Mes informations</a>
    </div>

    <h2>Mes informations</h2>

    <div class="user_block">
        {% include 'user/user_includes/_user_menu.html.twig' %}
        <div class="user_content">
            <div class="content_block">
                <div>
                    <p>Nom: {{ app.user.firstname }} {{ app.user.lastname }}</p>
                    <p>Email : {{ app.user.email }}</p>
