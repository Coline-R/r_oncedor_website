{% extends 'base.html.twig' %}

{% block title %}Administration - Avis lecteurs - R. Oncedor{% endblock %}

{% block main %}
    <main class="main" role="main">

        <!-- breadcrumb's Thread -->
        <div class="breadcrumb_thread">
            <a href="{{ path('home') }}">Accueil</a>
            <p>></p>
            <a href="{{ path('admin_product') }}">Administration</a>
            <p>></p>
            <a href="#" class="active">Gestion des avis lecteurs</a>
        </div>

        <h1>Gestion des avis lecteurs</h1>

        {% for message in app.flashes('info') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

        <div class="admin_block">
            {% include 'admin/admin_includes/_admin_menu.html.twig' %}
            <div class="admin_content">
                <div>
                    <a href="{{path('admin_opinion_add')}}" class="btn_link">ajouter</a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Avis</th>
                            <th>Auteur</th>
                            <th>Produit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for opinion in opinions %}
                            <tr>
                                <th>{{opinion.id}}</th>
                                <th>{{opinion.title}}</th>
                                <th>{{opinion.opinion}}</th>
                                <th>{{opinion.author}}</th>
                                <th>{{opinion.product.name}}</th>
                                <th>
                                    <a href="{{ path('admin_opinion_edit', { id: opinion.id }) }}" class="btn_link">Editer</a>
                                    <a href="{{ path('admin_opinion_delete', { id: opinion.id }) }}" class="btn_link" onclick="return confirm('Etes vous sÃ»re de vouloir supprimer cet avis lecteur : {{opinion.title}} ? ')">Supprimer</a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            <div>
        </div>
    </main>
{% endblock %}

