{% extends 'base.html.twig' %}

{% block title %}Administration - Types - R. Oncedor{% endblock %}

{% block main %}
    <main class="main" role="main">

        <!-- breadcrumb's Thread -->
        <div class="breadcrumb_thread">
            <a href="{{ path('home') }}">Accueil</a>
            <p>></p>
            <a href="{{ path('admin_product') }}">Administration</a>
            <p>></p>
            <a href="#" class="active">Gestion des types</a>
        </div>

        <h1>Gestion des types</h1>

        {% for message in app.flashes('info') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

        <div class="admin_block">
            {% include 'admin/admin_includes/_admin_menu.html.twig' %}
            <div class="admin_content">
                <div>
                    <a href="{{path('admin_type_add')}}" class="btn">ajouter</a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Nom du type</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for type in types %}
                            <tr>
                                <td>{{type.id}}</td>
                                <td>{{type.name}}</td>
                                <td>
                                    <a href="{{ path('admin_type_edit', { id: type.id }) }}" class="btn">Editer</a>
                                    <a href="{{ path('admin_type_delete', { id: type.id }) }}" class="btn" onclick="return confirm('Etes vous sÃ»re de vouloir supprimer {{type.name}} ? ')">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            <div>
        </div>
    </main>
{% endblock %}

