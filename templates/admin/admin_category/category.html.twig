{% extends 'base.html.twig' %}

{% block title %}Administration - Categories - R. Oncedor{% endblock %}

{% block main %}
    <main class="main" role="main">

        <!-- breadcrumb's Thread -->
        <div class="breadcrumb_thread">
            <a href="{{ path('home') }}">Accueil</a>
            <p>></p>
            <a href="{{ path('admin_product') }}">Administration</a>
            <p>></p>
            <a href="#" class="active">Gestion des Catégories</a>
        </div>

        <h1>Gestion des Catégories</h1>

        {% for message in app.flashes('info') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}

        <div class="admin_block">
            {% include 'admin/admin_includes/_admin_menu.html.twig' %}
            <div class="admin_content">
                <div>
                    <a href="{{path('admin_category_add')}}" class="btn">ajouter</a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Nom de la catégorie</td>
                            <td>Actions</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{category.id}}</td>
                                <td>{{category.name}}</td>
                                <td>
                                    <a href="{{ path('admin_category_edit', { id: category.id }) }}" class="btn">Editer</a>
                                    <a href="{{ path('admin_category_delete', { id: category.id }) }}" class="btn" onclick="return confirm('Etes vous sûre de vouloir supprimer {{category.name}} ? ')">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            <div>
        </div>
    </main>
{% endblock %}

